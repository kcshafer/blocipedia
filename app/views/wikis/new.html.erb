<div id="wiki-form-container">
  <%= form_for @wiki do |f| %>

    <fieldset class="form-group">
      <div class="field">
        <label for="title">Title</label>
        <%= f.text_field :title, id: "title", class: "form-control", placeholder: "Wiki Title" %>
      </div>
    </fieldset>

    <fieldset class="form-group">
      <div class="field">
        <label for="body">Body</label>
        <%= f.text_area :body, id: "body", class: "form-control", placeholder: "Wiki Body" %>
      </div>
    </fieldset>

    <fieldset class="form-group">
      <div class="field">
        <label for="private">Private?</label>
        <%= f.check_box :private, id: "private", class: "form-control" %>
      </div>
    </fieldset>

    <%= f.submit "Create", class: "btn btn-primary", type: "submit" %>
  <% end %>
</div>