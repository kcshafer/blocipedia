<div id="login-container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <label for="email">Email address</label>
      <%= f.email_field :email, autofocus: true, id: "email", type: "email", class: "form-control", placeholder: "Email" %>
    </div>

    <div class="field">
      <label for="password">Password</label>
      <%= f.password_field :password, autocomplete: "off", id: "password", type: "password", class: "form-control", placeholder: "Password" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me, type: "checkbox" %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-primary", type: "submit" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>

